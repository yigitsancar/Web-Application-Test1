@model List<UserInfo>
@{
    ViewBag.Title = "Toplantı Katılım Listesi";
},
<main class="text-center">
<h1 class="h4">Toplantı katılım listesi</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <td>Ad</td>
            <td>Katılım durumu</td>

        </tr>
    </thead>
    <tbody>

        @{int i = 0;}

        @foreach (var user in Model)
        {

            if(user.WillAttend == true){ 
                i++;
                ViewBag.UserCount = i;
            }

            var durum = user.WillAttend == true? "Evet" : "Hayır";
            var className = user.WillAttend == true? "table-success" : "table-danger";

        <tr class="@className">
            <td>@user.Name</td>
            <td>@durum</td>
            <td><a class="btn btn-sm btn-primary" href="/meeting/Details/@user.Id">Detay</a></td>
        </tr>
        }
    </tbody>
</table>
<div class="card">
    <div class="card-body">
        <span>Katılımcı sayısı: @i</spanp>
    
</div>
</main>